<aura:component implements="flexipage:availableForAllPageTypes" controller="caseRecordViewFormController">
    <aura:attribute name="caseIds" type="Id[]"></aura:attribute>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"></aura:handler>

    <lightning:card title="Open Cases">
        <lightning:accordion>
            <aura:iteration items="{!v.caseId}" var="caseId">
                <lightning:accordionSection label="{!caseId}">
                    <c:caseRecordAccordian caseId="{!caseId}"></c:caseRecordAccordian>
                </lightning:accordionSection>
            </aura:iteration>
        </lightning:accordion>
    </lightning:card>
</aura:component>	
